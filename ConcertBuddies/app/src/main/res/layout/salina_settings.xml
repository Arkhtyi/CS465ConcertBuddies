<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/violet"
            android:id="@+id/topBorder"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:id="@+id/settingsText"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/view2"
                        android:src="@drawable/hipster3"
                        android:layout_gravity="center_horizontal"
                        >
                    </ImageView>
                    <ImageView
                        android:id="@+id/imageView38"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/editicon"
                        android:layout_alignRight="@+id/view2"
                        android:layout_alignBottom="@+id/view2"
                        android:layout_marginBottom="6dp"
                        android:layout_marginRight="8dp"/>
                </RelativeLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Name"
                    android:id="@+id/nameText"
                    android:padding="2dp"
                    android:textColor="@color/violetAccent2"

                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameEdit"
                    android:textSize="20dp"
                    android:padding="2dp"
                    android:maxLength="20"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Location"
                    android:id="@+id/locationText"
                    android:padding="2dp"
                    android:textColor="@color/violetAccent2"

                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationEdit"
                    android:textSize="20dp"
                    android:padding="2dp"
                    android:maxLength="20"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Age"
                    android:id="@+id/ageText"
                    android:padding="2dp"
                    android:textColor="@color/violetAccent2"

                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ageEdit"
                    android:textSize="20dp"
                    android:padding="2dp"
                    android:maxLength="20"
                    android:numeric="integer"

                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editBioButton"
                    android:background="@drawable/cities"
                    android:textColor="@color/white"
                    android:scaleType="fitXY"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginTop="15dp"
                    android:text="Edit Bio"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:src="@drawable/whitearrow"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- spotify button -->
            <ImageView
                android:id="@+id/spotifyButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/spotify_revised2" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/violetAccent2"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buddyMatching"
            android:textSize="24sp"
            android:id="@+id/buddyMatchingText"
            android:textColor="@color/violetAccent2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="35dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget"
                    android:textSize="20sp"
                    android:id="@+id/budgetText"
                    android:textColor="@color/violetAccent2"
                    android:padding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age Range"
                    android:textSize="20sp"
                    android:id="@+id/ageRangeText"
                    android:textColor="@color/violetAccent2"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="20sp"
                    android:textColor="@color/violetAccent2"
                    android:padding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="20sp"

                    android:textColor="@color/violetAccent2"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <EditText

                    android:hint="Min"
                    android:inputType="number"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:maxLength="20"
                    android:textColorHint="@color/violetAccent2"
                    />
                <EditText

                    android:hint="Min"

                    android:inputType="number"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:maxLength="20"
                    android:textColorHint="@color/violetAccent2"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="20sp"
                    android:textColor="@color/violetAccent2"
                    android:padding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="20sp"

                    android:textColor="@color/violetAccent2"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >
                <EditText

                    android:hint="Max"
                    android:inputType="number"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:maxLength="20"
                    android:textColorHint="@color/violetAccent2"
                    />
                <EditText

                    android:hint="Max"

                    android:inputType="number"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:maxLength="20"
                    android:textColorHint="@color/violetAccent2"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locations"
                android:textSize="20sp"
                android:id="@+id/locationsText"
                android:textColor="@color/violetAccent2"
                android:padding="5dp"
                />
            <Spinner
                android:id="@+id/dropDown"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:prompt="@string/locations"
                android:entries="@array/cities_list"
                android:padding="5dp"
                android:textSize="20dp"
                android:color="@color/violetAccent2"
                android:layout_marginLeft="35dp"
                />
        </LinearLayout>
    </LinearLayout>


</ScrollView>