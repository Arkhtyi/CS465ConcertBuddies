            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Name"
                            android:id="@+id/nameText"
                            android:textColor="@color/lighter_grey"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameEdit"
                            android:textSize="18sp"
                            android:paddingBottom="10dp"
                            android:maxLength="20"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Location"
                            android:id="@+id/locationText"
                            android:textColor="@color/lighter_grey"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/locationEdit"
                            android:textSize="18sp"
                            android:paddingBottom="10dp"
                            android:maxLength="20"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Age"
                            android:id="@+id/ageText"
                            android:textColor="@color/lighter_grey"

                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ageEdit"
                            android:textSize="18sp"
                            android:paddingBottom="10dp"
                            android:maxLength="20"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="5dp"
                            android:elevation="12dp"
                            android:id="@+id/view2"
                            app:cardCornerRadius="40dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            android:thicknessRatio="1.9"
                            android:layout_gravity="center_horizontal"
                            >
                            <ImageView
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:id="@+id/profilePic"
                                android:src="@drawable/hipster3"

                                android:layout_gravity="center_horizontal"
                                >
                            </ImageView>
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Photo"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/changePhotoText"
                            android:textColor="@color/violetAccent2"
                            android:textSize="15sp"
                            />
                        <Button
                            android:layout_marginTop="28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editBioButton"
                            android:background="@drawable/cities"
                            android:textColor="@color/white"
                            android:scaleType="fitXY"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Edit Bio"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- spotify button -->
                    <ImageView
                        android:id="@+id/spotifyButton"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/spotify_revised2" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
