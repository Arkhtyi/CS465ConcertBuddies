<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.arkh_tyi.concertbuddies.layoutJavaPages.Bio"
        android:id="@+id/firstPost"
        android:paddingTop="10dp"
        >

<!-- Back Arrow Button -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backArrow"
        android:src="@drawable/back_arrow"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"

        />
<!-- Edit Bio Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Bio"
        android:textSize="24sp"
        android:gravity="center"
        android:id="@+id/editBioText"
        android:layout_centerHorizontal="true"
        android:textColor="@color/violetAccent2"
        />
<!-- line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/editBioText"
        android:layout_marginTop="10dp"
        android:id="@+id/line"
        />
<!-- bio editor -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tell us about yourself!"
        android:id="@+id/bioEditor"
        android:layout_below="@+id/line"
        android:textColor="@color/violetAccent2"


        />



</RelativeLayout>
