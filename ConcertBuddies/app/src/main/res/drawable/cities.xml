<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="7dp" />
            <solid android:color="@color/violet" />
            <stroke
                android:width="0dip"
                android:color="@color/violet" />
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="7dp" />
            <solid android:color="@color/violetAccent1" />
            <stroke
                android:width="0dip"
                android:color="@color/violetAccent1" />
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp" />
        </shape>
    </item>
</selector>